FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build-env
WORKDIR /App

COPY NuGet.config .
COPY nuget-local ./nuget-local

COPY planner-node-service ./planner-node-service

RUN dotnet restore planner-node-service/planner-node-service.sln

RUN dotnet publish \
  planner-node-service/src/planner-node-service.Api/planner-node-service.Api.csproj \
  -c Release -o /App/out


FROM mcr.microsoft.com/dotnet/aspnet:7.0
WORKDIR /App
COPY --from=build-env /App/out .
ENTRYPOINT ["dotnet", "planner-node-service.Api.dll"]